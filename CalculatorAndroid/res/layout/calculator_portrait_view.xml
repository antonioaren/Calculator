<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutH1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:orientation="vertical"
        android:weightSum="1" >

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            style="@style/ButtonDisplay"
            android:textColor="#000000"
            android:background="@drawable/custom_button_white"
            android:layout_weight="1"
            android:gravity="center_vertical|right"/>

        <LinearLayout
            android:id="@+id/linearLayoutH6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0">

            <Button
                android:id="@+id/buttonClear"
                style="@style/ButtonFunction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_red"
                android:text="@string/lbl_clear"
                android:layout_weight="0.5"/>


            <Button
                android:id="@+id/buttonBackspace"
                style="@style/ButtonFunction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_red"
                android:text="@string/lbl_backspace"
                android:layout_weight="0.5"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button1"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="3"/>

        <Button
            android:id="@+id/buttonDivide"
            style="@style/ButtonOperator"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_blue"
            android:text="/"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button4"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="6" />

        <Button
            android:id="@+id/buttonMult"
            style="@style/ButtonOperator"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_blue"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button7"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="9" />

        <Button
            android:id="@+id/buttonMinus"
            style="@style/ButtonOperator"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_blue"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutH5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/button0"
            style="@style/ButtonDigit"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_black"
            android:text="0" />

        <Button
            android:id="@+id/buttonDot"
            style="@style/ButtonOperator"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_blue"
            android:text="." />

        <Button
            android:id="@+id/buttonEqual"
            style="@style/ButtonOperator"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_green"
            android:text="=" />

        <Button
            android:id="@+id/buttonPlus"
            style="@style/ButtonOperator"
            android:layout_weight=".25"
            android:background="@drawable/custom_button_blue"
            android:text="+" />
    </LinearLayout>

</LinearLayout>
